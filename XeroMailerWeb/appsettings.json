{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "XeroMailerWeb": {
    "EnableDetailedLogging": false,
    "IncludeCompanyInfoInEmail": true,
    "IncludeCompanyCountryInEmail": false,
    "BccSharedMailbox": true,
    "InvoiceReminders": true,
    "InvoiceRemindAfterDays": 7,
    "InvoiceRemindRepeatEveryDays": 7
  },
  "AllowedHosts": "*",
  "Entra": {
    "DirectoryTenantId": "YOUR_ENTRA_TENANT_ID",
    "AppRegClientId": "YOUR_ENTRA_CLIENT_ID",
    "AppRegClientSecret": "YOUR_ENTRA_CLIENT_SECRET",
    "SharedMailbox": "accounts@yourdomain.com"
  },
  "Xero": {
    "XeroClientId": "YOUR_XERO_CLIENT_ID",
    "XeroClientSecret": "YOUR_XERO_CLIENT_SECRET",
    "WebhookKey": "YOUR_XERO_WEBHOOK_KEY"
  }
} 